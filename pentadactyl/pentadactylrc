"hg6978

loadplugins '\.(js|penta)$'
group user

colorscheme custom

set defsearch=duckduckgo

set incfind
set hlfind
set findcase=smart

map , <leader>

map -builtin a	a<space>-tags<space>readlater

map -builtin -count -modes=n s	         <count>b#<Return>
map -builtin -count -modes=n <C-Space>   <count><C-z>
map -builtin -count -modes=n <Tab>	 <count><C-z>

map -builtin J <count>gT
map -builtin K <count>gt

map -builtin j 5j
map -builtin k 5k
map -builtin h 5h
map -builtin l 5l


" vim: set ft=pentadactyl:
